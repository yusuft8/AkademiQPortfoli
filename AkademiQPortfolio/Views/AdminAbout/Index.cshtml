@model AkademiQPortfolio.Entities.About
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hakkımda";
}

<div class="max-w-5xl mx-auto space-y-8 p-6">

    <div>
        <h2 class="text-4xl font-black tracking-tight text-slate-900 dark:text-white">Hakkımda</h2>
        <p class="text-slate-500 dark:text-slate-400">
            Sitedeki Hakkımda bölümünü buradan güncelleyebilirsin.
        </p>
    </div>

    <form asp-controller="AdminAbout" asp-action="Index" method="post" class="glass-panel rounded-2xl p-8 space-y-6">
        @Html.AntiForgeryToken()

 
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-bold text-slate-400 mb-2">Ad Soyad</label>
                <input asp-for="NameSurname"
                       class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>

            <div>
                <label class="block text-sm font-bold text-slate-400 mb-2">Başlık</label>
                <input asp-for="Title"
                       class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>
        </div>

        <div>
            <label class="block text-sm font-bold text-slate-400 mb-2">Açıklama</label>
            <textarea asp-for="Description" rows="6"
                      class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-bold text-slate-400 mb-2">Telefon</label>
                <input asp-for="Phone"
                       class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>

            <div>
                <label class="block text-sm font-bold text-slate-400 mb-2">Email</label>
                <input asp-for="Email"
                       class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />
            </div>
        </div>

        <div>
            <label class="block text-sm font-bold text-slate-400 mb-2">Adres</label>
            <input asp-for="Adress"
                   class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />
        </div>

        <div>
            <label class="block text-sm font-bold text-slate-400 mb-2">Resim URL</label>
            <input asp-for="ImageURL"
                   class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 text-white focus:outline-none focus:ring-2 focus:ring-primary" />

            @if (!string.IsNullOrWhiteSpace(Model?.ImageURL))
            {
                <div class="mt-4 flex items-center gap-4">
                    <img src="@Model.ImageURL" class="w-20 h-20 rounded-2xl object-cover border border-white/10" />
                    <a href="@Model.ImageURL" target="_blank" class="text-primary underline text-sm">Görseli aç</a>
                </div>
            }
        </div>

        <div class="flex justify-end gap-3 pt-2">
            <button type="submit"
                    class="px-6 py-3 rounded-xl bg-primary hover:bg-primary/90 text-white font-bold shadow-lg shadow-primary/30">
                Kaydet
            </button>
        </div>
    </form>

</div>
