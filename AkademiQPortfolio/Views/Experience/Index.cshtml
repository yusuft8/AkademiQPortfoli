@model List<AkademiQPortfolio.Entities.Experience>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Deneyimler";
}

<div class="w-full px-6 lg:px-10 space-y-8">

    <!-- Page Heading -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div class="space-y-1">
            <h2 class="text-4xl font-black tracking-tight text-slate-900 dark:text-white">Deneyimler</h2>
            <p class="text-slate-500 dark:text-slate-400">Geçmiş iş tecrübelerinizi buradan yönetebilirsiniz.</p>
        </div>

        <a asp-controller="Experience" asp-action="Create"
           class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-6 rounded-xl flex items-center gap-2 transition-all shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined">add</span>
            Yeni Deneyim
        </a>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="glass-panel rounded-2xl p-6 flex items-start justify-between">
            <div class="space-y-2">
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">Toplam Deneyim</p>
                <h3 class="text-2xl font-bold">@Model.Count Kayıt</h3>
            </div>
            <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center text-primary">
                <span class="material-symbols-outlined">list</span>
            </div>
        </div>

        <div class="glass-panel rounded-2xl p-6 flex items-start justify-between">
            <div class="space-y-2">
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">Firma Sayısı</p>
                <h3 class="text-2xl font-bold">@Model.Select(x => x.CompanyName).Distinct().Count() Firma</h3>
            </div>
            <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center text-green-500">
                <span class="material-symbols-outlined">business</span>
            </div>
        </div>

        <div class="glass-panel rounded-2xl p-6 flex items-start justify-between">
            <div class="space-y-2">
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">Son Güncelleme</p>
                <h3 class="text-2xl font-bold">—</h3>
            </div>
            <div class="w-12 h-12 rounded-xl bg-orange-500/20 flex items-center justify-center text-orange-500">
                <span class="material-symbols-outlined">update</span>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="glass-panel rounded-2xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-white/5 border-b border-white/10">
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-wider">Firma</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-wider">Pozisyon</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-wider">Tarih</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-wider text-right">İşlemler</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-white/10">

                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td class="px-6 py-10 text-slate-400" colspan="4">
                                Henüz deneyim kaydı yok.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/5 transition-colors group">
                                <td class="px-6 py-6">
                                    <div class="flex items-center gap-3">
                                        <div class="w-12 h-12 rounded-full glass-panel flex items-center justify-center p-2">
                                            <div class="w-full h-full bg-primary/20 rounded-full flex items-center justify-center text-primary">
                                                <span class="material-symbols-outlined text-lg">
                                                    @(
                                                                                                string.IsNullOrWhiteSpace(item.IconUrl)
                                                                                                ? "work"
                                                                                                : "image"
                                                                                                )
                                        </span>
                                    </div>
                                </div>

                                        <div class="flex flex-col">
                                            <span class="font-semibold text-slate-900 dark:text-white">
                                                @item.CompanyName
                                            </span>
                                    @if (!string.IsNullOrWhiteSpace(item.IconUrl))
                                            {
                                                <a class="text-xs text-primary underline w-fit" href="@item.IconUrl" target="_blank">İkonu aç</a>
                                            }
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    <span class="text-slate-600 dark:text-slate-300">@item.Tittle</span>
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                                        <p class="text-xs text-slate-500 dark:text-slate-400 mt-1 line-clamp-2">
                                            @item.Description
                                        </p>
                                    }
                                </td>

                                <td class="px-6 py-6">
                                    <span class="text-slate-500 dark:text-slate-400 text-sm">@item.WorkDate</span>
                                </td>

                                <td class="px-6 py-6 text-right">
                                    <div class="flex items-center justify-end gap-2">

                                        <a asp-controller="Experience" asp-action="Update" asp-route-id="@item.Experiencid"
                                           class="px-4 py-2 rounded-lg bg-primary/10 hover:bg-primary/20 text-primary text-sm font-bold transition-all border border-primary/20">
                                            Güncelle
                                        </a>

                                        <a asp-controller="Experience" asp-action="Delete" asp-route-id="@item.Experiencid"
                                           class="px-4 py-2 rounded-lg bg-red-500/10 hover:bg-red-500/20 text-red-500 text-sm font-bold transition-all border border-red-500/20"
                                           onclick="return confirm('Silmek istediğine emin misin?');">
                                            Sil
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>
