@model AkademiQPortfolio.Entities.Work
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="w-full max-w-6xl mx-auto px-6 py-10">
    <!-- Header -->
    <div class="flex flex-col gap-2 mb-8">
        <h2 class="text-3xl md:text-4xl font-black tracking-tight">Yeni Proje Ekle</h2>
        <p class="text-slate-500 dark:text-slate-400 text-sm">Projeni ekle, kaydet ve portfolyoda göster.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- FORM -->
        <div class="lg:col-span-2">
            <form asp-controller="Project" asp-action="CreateProject" method="post"
                  class="bg-white dark:bg-surface-dark rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">

                <div class="p-6 border-b border-slate-200 dark:border-slate-800">
                    <h3 class="text-lg font-bold">Proje Bilgileri</h3>
                    <p class="text-sm text-slate-500 dark:text-slate-400">Başlık, alt başlık ve görsel linkini gir.</p>
                </div>

                <div class="p-6 space-y-5">
                    <!-- Title -->
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Başlık</label>
                        <input asp-for="Title"
                               class="w-full rounded-xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-background-dark/40
                                      px-4 py-3 outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary"
                               placeholder="Örn: AI Destekli Eğitim Asistanı" />
                    </div>

                    <!-- SubTitle -->
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Alt Başlık</label>
                        <input asp-for="SubTitle"
                               class="w-full rounded-xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-background-dark/40
                                      px-4 py-3 outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary"
                               placeholder="Örn: Soru-cevap odaklı akıllı sistem" />
                    </div>

                    <!-- ImageUrl -->
                    <div class="space-y-2">
                        <label class="text-sm font-semibold">Resim URL</label>
                        <input asp-for="ImageUrl"
                               class="w-full rounded-xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-background-dark/40
                                      px-4 py-3 outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary"
                               placeholder="https://..." />
                        <p class="text-xs text-slate-500 dark:text-slate-400">İpucu: https ile başlayan bir görsel linki kullan.</p>
                    </div>
                </div>

                <div class="p-6 bg-slate-50 dark:bg-background-dark/30 border-t border-slate-200 dark:border-slate-800 flex items-center justify-end gap-3">
                    <a asp-controller="Project" asp-action="ProjectList"
                       class="px-5 py-2.5 rounded-xl border border-slate-300 dark:border-slate-700 text-sm font-bold
                              hover:bg-slate-200/60 dark:hover:bg-white/5 transition">
                        İptal
                    </a>

                    <button type="submit"
                            class="px-6 py-2.5 rounded-xl bg-primary text-background-dark font-black text-sm
                                   shadow-lg shadow-primary/20 hover:brightness-110 transition">
                        Kaydet
                    </button>
                </div>
            </form>
        </div>

        <!-- PREVIEW (Placeholder) -->
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-surface-dark rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
                <div class="p-5 border-b border-slate-200 dark:border-slate-800">
                    <p class="text-xs font-bold uppercase tracking-wider text-slate-400">Önizleme</p>
                </div>

                <div class="p-5 space-y-4">
                    <div class="rounded-xl overflow-hidden border border-slate-200 dark:border-slate-800">
                        <div class="w-full aspect-video bg-slate-200 dark:bg-background-dark/40 bg-cover bg-center"
                             style="background-image: @(string.IsNullOrWhiteSpace(Model?.ImageUrl) ? "none" : $"url('{Model.ImageUrl}')");">
                        </div>

                        <div class="p-4">
                            <p class="font-black text-slate-900 dark:text-white line-clamp-1">
                                @(string.IsNullOrWhiteSpace(Model?.Title) ? "Proje Başlığı" : Model.Title)
                            </p>
                            <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-2 mt-1">
                                @(string.IsNullOrWhiteSpace(Model?.SubTitle) ? "Alt başlık burada görünecek" : Model.SubTitle)
                            </p>
                        </div>
                    </div>

                    <div class="rounded-xl bg-primary/10 border border-primary/20 p-4">
                        <p class="text-sm font-bold text-primary mb-1">İpucu</p>
                        <p class="text-xs text-slate-600 dark:text-slate-400 leading-relaxed">
                            Görsel linki ekleyince kart daha profesyonel görünür.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
