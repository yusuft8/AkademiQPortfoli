@model AkademiQPortfolio.Entities.About

<section class="py-24 px-6 border-y border-white/5 bg-white/[0.02]" id="about">
    <div class="max-w-[1200px] mx-auto">
        <div class="flex flex-col md:flex-row gap-12 items-center">

            <div class="relative group">
                <div class="absolute -inset-1 bg-primary rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
                <div class="relative size-64 md:size-80 bg-surface-dark rounded-2xl overflow-hidden border border-white/10">
                    <img class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
                         src="@(string.IsNullOrWhiteSpace(Model?.ImageURL) ? Url.Content("~/sility/images/foto.jpg") : Model.ImageURL)" />
                </div>
            </div>

            <div class="flex-1 space-y-6">
                <h3 class="text-primary font-bold tracking-widest uppercase text-sm">Hakkımda</h3>

                <h2 class="text-3xl md:text-4xl font-bold leading-tight">
                    @(Model?.NameSurname ?? "Ad Soyad") <br />
                    <span class="text-slate-300">@(Model?.Title ?? "Başlık")</span>
                </h2>

                <p class="text-lg text-slate-400 leading-relaxed">
                    Yazılım mühendisliği öğrencisiyim. Web geliştirme ve yapay zeka alanlarında projeler üretiyor, modern teknolojilerle performanslı ve kullanıcı odaklı uygulamalar geliştiriyorum. Python ile makine öğrenmesi çalışmaları yapıyor, kendimi sürekli geliştirerek gerçek dünya problemlerine yazılımsal çözümler üretmeyi hedefliyorum.                </p>

                <div class="flex flex-wrap gap-4 pt-4">

                    @if (!string.IsNullOrWhiteSpace(Model?.Adress))
                    {
                        <div class="flex items-center gap-2 text-slate-300">
                            <span class="material-symbols-outlined text-primary">location_on</span>
                            <span>@Model.Adress</span>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model?.Phone))
                    {
                        <div class="flex items-center gap-2 text-slate-300">
                            <span class="material-symbols-outlined text-primary">call</span>
                            <span>@Model.Phone</span>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model?.Email))
                    {
                        <div class="flex items-center gap-2 text-slate-300">
                            <span class="material-symbols-outlined text-primary">mail</span>
                            <span>@Model.Email</span>
                        </div>
                    }
                </div>
                <a asp-controller="Default" asp-action="DownloadCv"
                   class="group inline-flex items-center gap-3 px-7 py-3 rounded-xl
          bg-gradient-to-r from-primary/20 to-primary/5
          border border-primary/30 text-primary font-bold
          hover:from-primary/30 hover:to-primary/10 hover:border-primary/60
          transition-all duration-300">

                    <span class="material-symbols-outlined group-hover:translate-y-0.5 transition-transform">
                        download
                    </span>

                    CV’mi İndir
                </a>


        </div>
    </div>
</section>
