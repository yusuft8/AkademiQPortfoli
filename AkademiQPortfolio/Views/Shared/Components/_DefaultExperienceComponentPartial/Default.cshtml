@model List<AkademiQPortfolio.Entities.Experience>

<section class="py-24 px-6 bg-white/[0.02]" id="experience">
    <div class="max-w-[800px] mx-auto">

        <div class="text-center mb-20 space-y-4">
            <h3 class="text-primary font-bold tracking-widest uppercase text-sm">Deneyim</h3>
            <h2 class="text-4xl font-bold">İş Deneyimi</h2>
        </div>

        <div class="relative space-y-12">
            <div class="absolute left-0 md:left-1/2 md:-ml-px h-full w-0.5 bg-gradient-to-b from-primary via-primary/20 to-transparent"></div>

            @if (Model == null || !Model.Any())
            {
                <div class="bg-surface-dark p-6 rounded-2xl border border-white/10 text-slate-400">
                    Henüz deneyim eklenmedi.
                </div>
            }
            else
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    bool isEven = i % 2 == 0;

                    <div class="relative flex flex-col md:flex-row md:justify-between items-start md:items-center w-full">

                        @* SOL TARAF (Even: içerik solda) *@
                        @if (isEven)
                        {
                            <div class="md:w-[45%] mb-4 md:mb-0 md:text-right order-2 md:order-1">
                                <h4 class="text-xl font-bold">@item.Tittle</h4>
                                <p class="text-primary text-sm font-bold mt-1">@item.CompanyName</p>

                                @if (!string.IsNullOrWhiteSpace(item.Description))
                                {
                                    <p class="text-slate-400 mt-2 text-sm leading-relaxed">
                                        @item.Description
                                    </p>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="md:w-[45%] order-3 md:order-1 text-right hidden md:block">
                                <span class="px-3 py-1 rounded bg-white/5 text-xs font-mono text-slate-400 border border-white/10">
                                    @item.WorkDate
                                </span>
                            </div>
                        }

                        <div class="absolute left-[-8px] md:left-1/2 md:-ml-[9px] z-10 size-4 rounded-full bg-primary border-4 border-background-dark order-1 md:order-2"></div>

                        @* SAĞ TARAF *@
                        @if (isEven)
                        {
                            <div class="md:w-[45%] md:pl-8 order-3">
                                <span class="px-3 py-1 rounded bg-white/5 text-xs font-mono text-slate-400 border border-white/10">
                                    @item.WorkDate
                                </span>
                            </div>
                        }
                        else
                        {
                            <div class="md:w-[45%] md:pl-8 order-2 md:order-3">
                                <h4 class="text-xl font-bold">@item.Tittle</h4>
                                <p class="text-primary text-sm font-bold mt-1">@item.CompanyName</p>

                                @if (!string.IsNullOrWhiteSpace(item.Description))
                                {
                                    <p class="text-slate-400 mt-2 text-sm leading-relaxed">
                                        @item.Description
                                    </p>
                                }

                                <span class="md:hidden inline-block mt-2 px-3 py-1 rounded bg-white/5 text-xs font-mono text-slate-400 border border-white/10">
                                    @item.WorkDate
                                </span>
                            </div>
                        }

                    </div>
                }
            }
        </div>
    </div>
</section>
