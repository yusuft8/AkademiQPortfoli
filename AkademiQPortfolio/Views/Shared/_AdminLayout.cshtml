@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Admin Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#135bec",
                        "background-light": "#f6f6f8",
                        "background-dark": "#101622",
                        "surface-dark": "#192233",
                        "surface-light": "#ffffff",
                    },
                    fontFamily: {
                        display: ["Spline Sans", "sans-serif"]
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white overflow-x-hidden">

    <div class="flex min-h-screen w-full">

        <!-- SIDEBAR -->
        <aside class="hidden w-72 flex-col border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-surface-dark lg:flex">
            <div class="flex h-full flex-col justify-between p-6">

                <div class="flex flex-col gap-8">

                    <!-- User -->
                    <div class="flex items-center gap-4 px-2">
                        <div class="relative h-12 w-12 overflow-hidden rounded-full border-2 border-primary/20">
                            <img class="h-full w-full object-cover"
                                 src="https://lh3.googleusercontent.com/aida-public/AB6AXuCpzIu5IoDCyHTBAGIOoLL2LvFx5I77W_1jXj52H7onnbQw0wiOR_Ezc6zIFciKGjw1oixxRtr830ZkDx6lcTSYtBFWc8Y6okSfcHXKQla278hc8ZcakGSWoyG4xmHfNFBPcaQ0Hafxog591MxLlOG1Zu2Si6yz4v-v8nHnukbyqzifI6KRzf5sqNcy9u0Icbh3qYEMtdCecfX4NJKj8QuTAt24IUUZ_CYel2BObWhf4ZXnCeELqaCCgos-HkQIgyDtT2EIy4up5bSt" />
                        </div>
                        <div>
                            <h1 class="text-sm font-bold">Yusuf Topal</h1>
                            <p class="text-xs text-slate-500 dark:text-slate-400">Portfolio Admin</p>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")

                </div>

                <!-- Bottom (BUNLARI İSTEMİYORDUN: Settings/Logout) -->
                @* İstersen burayı tamamen silebilirsin *@

            </div>
        </aside>

        <!-- MAIN -->
        <main class="flex flex-1 flex-col overflow-y-auto">

            <header class="sticky top-0 z-20 flex h-16 items-center justify-between border-b bg-white/80 px-6 backdrop-blur-md dark:bg-background-dark/80 lg:hidden">
                <span class="text-lg font-bold">Portfolio Admin</span>
            </header>

            @RenderBody()

        </main>

    </div>

</body>
</html>
