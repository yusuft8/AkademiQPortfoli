@{
    ViewData["Title"] = "Genel Bakış";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // OLUŞTURDUĞUMUZ LAYOUT'U BURAYA BAĞLIYORUZ
}

<div class="max-w-7xl mx-auto">
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white">Genel Bakış</h2>
        <p class="text-slate-500">Hoş geldin, sistem istatistiklerin aşağıdadır.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <div class="bg-white dark:bg-surface-dark p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center gap-4">
                <div class="p-4 rounded-xl bg-blue-50 text-blue-600 dark:bg-blue-500/10 dark:text-blue-400">
                    <span class="material-symbols-outlined">mail</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">Toplam Mesaj</p>
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">@ViewBag.messageCount</h3>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-surface-dark p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center gap-4">
                <div class="p-4 rounded-xl bg-amber-50 text-amber-600 dark:bg-amber-500/10 dark:text-amber-400">
                    <span class="material-symbols-outlined">bolt</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">Yetenekler</p>
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">@ViewBag.skillCount</h3>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-surface-dark p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center gap-4">
                <div class="p-4 rounded-xl bg-emerald-50 text-emerald-600 dark:bg-emerald-500/10 dark:text-emerald-400">
                    <span class="material-symbols-outlined">show_chart</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">Ortalama</p>
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">%@Convert.ToDecimal(ViewBag.skillAvgValue).ToString("0")</h3>
                </div>
            </div>
        </div>

    </div>
</div>