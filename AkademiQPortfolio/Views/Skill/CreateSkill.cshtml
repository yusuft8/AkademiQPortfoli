@model Skill
@{
    ViewData["Title"] = "Yeni Yetenek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="w-full px-6 lg:px-10 py-6">
    <div class="max-w-2xl mx-auto space-y-6">

        <!-- Back -->
        <div>
            <a asp-controller="Skill" asp-action="SkillList"
               class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-primary transition-colors">
                <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                Listeye Geri Dön
            </a>
        </div>

        <!-- Card -->
        <div class="glass-panel rounded-2xl border border-white/10 overflow-hidden">
            <div class="p-8">
                <div class="mb-8">
                    <h1 class="text-3xl font-black tracking-tight text-slate-900 dark:text-white">
                        Yeni Yetenek Ekle
                    </h1>
                    <p class="text-slate-500 dark:text-slate-400 mt-2 text-sm">
                        Portfolyonda sergilenecek yeni bir yetenek tanımlayın.
                    </p>
                </div>

                <form method="post" class="space-y-6">

                    <!-- Skill Title -->
                    <div>
                        <label class="block text-sm font-bold text-slate-400 mb-2">Yetenek Adı</label>
                        <div class="relative">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-500">
                                bolt
                            </span>

                            <input asp-for="SkillTitle"
                                   class="w-full rounded-xl border border-slate-700 bg-slate-900 p-4 pl-11 text-white
                                          focus:outline-none focus:ring-2 focus:ring-primary"
                                   placeholder="Örn: C#, React, UI Design" required />
                        </div>
                    </div>

                    <!-- Skill Value -->
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <label class="block text-sm font-bold text-slate-400">Yetenek Seviyesi (%)</label>
                            <span id="rangeValue"
                                  class="px-3 py-1 rounded-full text-xs font-black bg-primary/10 border border-primary/20 text-primary">
                                50%
                            </span>
                        </div>

                        <input asp-for="SkillValue" type="range" min="0" max="100" value="50"
                               oninput="document.getElementById('rangeValue').innerText = this.value + '%'; document.getElementById('bar').style.width = this.value + '%';"
                               class="w-full h-2 rounded-lg appearance-none cursor-pointer accent-[color:var(--tw-color-primary)]" />

                        <div class="flex justify-between text-[10px] text-slate-500 mt-2 uppercase font-bold tracking-wider">
                            <span>Başlangıç</span>
                            <span>Uzman</span>
                        </div>

                        <div class="mt-3 bg-white/10 rounded-full h-3 overflow-hidden">
                            <div id="bar" class="bg-primary h-3 rounded-full transition-all duration-500" style="width:50%"></div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="pt-2">
                        <button type="submit"
                                class="w-full inline-flex justify-center items-center px-6 py-3 rounded-xl bg-primary hover:bg-primary/90
                                       text-white font-black shadow-lg shadow-primary/30 transition active:scale-[0.99]">
                            <span class="material-symbols-outlined text-[20px] mr-2">check</span>
                            Yeteneği Kaydet
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="px-8 py-4 border-t border-white/10 bg-white/5">
                <div class="flex items-start gap-2 text-slate-500 dark:text-slate-400 text-xs">
                    <span class="material-symbols-outlined text-[18px] text-primary">info</span>
                    <p>Bu yetenek kaydedildikten sonra listeleme sayfasında görünecektir.</p>
                </div>
            </div>
        </div>

    </div>
</div>
